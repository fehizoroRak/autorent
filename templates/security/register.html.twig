{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}

{% include '_partials/header_steps.html.twig' %}

<div class="login-container">
    <div class="login-form">
        <h1>Créer un compte</h1>
        
        {{ form_start(registrationForm, {'action': path('app_register', {'id': car.id, 'total': total})}) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.name) }} 
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.phonenumber) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.password) }}
        
        {# Bouton de soumission du formulaire #}
        <button type="submit" class="create-account">S'enregistrer</button>
        
        {{ form_end(registrationForm) }}
    </div>
</div>

{# Modal HTML #}
<!-- Modal HTML -->
<div id="confirmationModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span> <!-- Bouton de fermeture -->
        <div style="display:flex; gap:10px; justify-content:center; align-items: center;">
            <p>Votre compte a bien été créé.</p>
            <i style="color: #fe5b3e; font-size: 1.5rem;" class="ri-checkbox-circle-fill"></i>
        </div>
        <div style="display:flex; gap:10px; justify-content:center; align-items: center;">
            <a href="{{ path('app_login', {'_target_path': path('app_pack'),'id': car.id, 'total': total}) }}" id="loginRedirectButton" class="modal-button">Se connecter</a>
            <button id="cancelButton" class="modal-button cancel">Annuler</button>
        </div>
    </div>
</div>



<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-form {
        background: #fbfbfb;
        padding: 40px;
        width: 40%;
        border: 2px solid #f7f7f7;
        border-radius: 8px;
        text-align: start;
        margin-top: 130px;
        margin-bottom: 50px;
    }

    .login-form h1 {
        margin-bottom: 20px;
    }

    input[type="text"], input[type="password"], input[type="email"], select {
        width: 100%;
        height: 48px;
        padding: 10px;
        margin: 10px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
        border-radius: 8px;
    }

    button {
        background-color: #fe5b3e;
        color: white;
        padding: 14px 20px;
        margin: 20px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 8px;
        font-size: 1.1rem;
    }

    button:hover {
        opacity: 0.9;
        font-weight: bold;
    }

    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
        padding-top: 60px;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 220px auto;
        padding: 30px 20px 20px 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        text-align: center;
        border-radius: 8px;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
    .modal-button {
        background-color: #fe5b3e;
        color: white;
        padding: 14px 20px;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 8px;
        font-size: 1.1rem;

    }
        .modal-button:hover {
        font-size: 1.2rem;
        font-weight:bold;

    }

    .modal-button.cancel {
        background-color: #ccc;
        color: black;
    }

    .modal-button.cancel:hover {
        opacity: 0.9;
    }
</style>

{% include '_partials/footer.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            // Get the modal
            var modal = document.getElementById("confirmationModal");

            // Get the cancel button
            var cancelButton = document.getElementById("cancelButton");

            // When the user clicks the cancel button, close the modal
            cancelButton.onclick = function() {
                modal.style.display = "none";
            }

            // Check if there's a success flash message and show the modal
            {% for message in app.flashes('success') %}
                modal.style.display = "block";
            {% endfor %}
        });
    </script>
{% endblock %}

