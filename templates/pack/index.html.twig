/* Responsive adjustments */
/* Responsive adjustments */
@media (max-width: 1024px) {
    .packages, .options-container {
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .package, .option-card {
        width: 48%; /* Adjust width to show 2 cards per row */
        margin-bottom: 20px;
    }
}

@media (max-width: 768px) {
    .packages, .options-container {
        flex-direction: row;
    }

    .package, .option-card {
        width: 48%; /* Keeps 2 cards per row for this range too */
    }
}

@media (max-width: 672px) {
    .packages, .options-container {
        flex-direction: column;
        align-items: center;
    }

    .package, .option-card {
        width: 90%; /* Full width for smaller devices */
    }
}

/* Adding specific styles for 650px to 1024px */
@media (min-width: 672px) and (max-width: 1024px) {
    .packages, .options-container {
        flex-direction: row;
        justify-content: space-between;
    }

    .package, .option-card {
        width: 48%; /* Show two cards per row */
