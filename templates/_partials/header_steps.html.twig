        .step-3,
        .step-4 {
            font-size: 0.6rem;
            width: 25%;
        }

        .step-number {
            width: 18px;
            height: 18px;
            font-size: 0.6rem;
            border-radius: 7px 0 7px 0;
        }
    }

    @media(max-width: 460px) {
        .step-title {
            flex-direction: column;
        }
    }
