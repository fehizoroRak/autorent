{# pack/index.html.twig #}

<div id="header" style="position:fixed;background-color:#f7f7f7;z-index: 99999;width:100%;top: 0;left: 0;">
    <nav>
        <div class="nav__header">
            <div class="nav__logo">
                <a href="{{ path('app_home') }}">AutoRent</a>
            </div>
            <div class="nav__menu__btn" id="menu-btn">
                <i class="ri-menu-line"></i>
            </div>
        </div>
        <ul class="nav__links" id="nav-links">
            <li class="nav__links__btn">
                <button class="btn">
                    <i class="ri-question-line"></i>
                    Aide</button>
            </li>
            <li class="nav__links__btn">
                <button class="btn">
                    <i class="ri-contacts-line"></i>
                    Contacts</button>
            </li>
        </ul>




       	<div class="nav__btns">
			{% if app.user %}
				<a style="margin-right:20px;" class="" href="{{ path('app_login') }}">
					<i class="ri-user-line"></i>
					Bonjour,
					{{ app.user.name }}
					{{ app.user.firstname }}
				</a>

			{% endif %}

			<a class="" href="">
				<i class="ri-question-line"></i>
				Aide
			</a>

			{% if app.user %}
				<a style="margin-left:20px;" class="" href="{{ path('app_logout') }}">
					<i class="ri-logout-box-r-line"></i>
				</a>
			{% endif %}
		</div>
    </nav>

    <div class="reservation-steps">
        <div class="step-1">
            <div class="step-title" style="display: flex; gap:10px; align-items:center;">
                <div class="step-number-1">1</div>
                <h4 style="color:#fe5b3e;;">AGENCE DE LOCATION</h4>
            </div>
            <div class="step-details">
                <div style="width:50%;">
                    <h4>Départ</h4>
                    <h4 class="location" id="departureLocation">{{ app.session.get('pickupLocation') }}</h4>
                    <p id="departureDateTime">{{ app.session.get('startDate') }} | {{ app.session.get('startTime') }}</p>
                </div>
                <div style="width:50%;">
                    <h4>Retour</h4>
                    <h4 class="location" id="returnLocation">{{ app.session.get('dropoffLocation') }}</h4>
                    <p id="returnDateTime">{{ app.session.get('endDate') }} | {{ app.session.get('endTime') }}</p>
                </div>
            </div>
        </div>

<div class="step-2">
    <div class="step-title" style="display: flex; gap:10px; align-items:center;">
        <div class="step-number-2">2</div>
        <h4 style="color:#fe5b3e;">VÉHICULE</h4>
    </div>
<div class="step-details2" style="margin-top:10px;">
    {% if car is defined %}
        <h4>{{ car.brand }} {{ car.model }}</h4>
        <div>{{ total is defined ? total ~ ' €' : '' }}</div>
    {% else %}
        <p style="margin-top: 45px;">Veuillez choisir un véhicule</p>
    {% endif %}
</div>
</div>




        <div class="step-3">
            <div class="step-title" style="display: flex; gap:10px; align-items:center;">
                <div class="step-number">3</div>
                <h4 style="color:#b2b2b2;">PROTECTIONS ET OPTIONS</h4>
            </div>
            <div class="step-details">
                <div style="width:50%; border-right: 1px solid #475569;">
                    <h4>Basic</h4>
                    <div>Inclus</div>
                </div>
                <div style="width:50%; text-align:right;">
                    <h4>0 option</h4>
                    <div>0,00 €</div>
                </div>
            </div>
        </div>

        <div class="step-4">
            <div class="step-title" style="display: flex; gap:10px; align-items:center;">
                <div class="step-number">4</div>
                <h4 style="color:#b2b2b2;">RÉSUMÉ</h4>
            </div>
            <div class="step-details4" style="margin-top:10px;">
                <h4>Prix total</h4>
                <div>117,19 €</div>
            </div>
        </div>
    </div>
</div>

