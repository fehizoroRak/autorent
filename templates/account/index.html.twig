{% extends 'base.html.twig' %}

{% block title %}Confirmation de la réservation
{% endblock %}

{% block body %}
	{% include '_partials/header_connected.html.twig' %}

	<div class="container">
		<header>
			<div class="navbar">
				<h1>AutoRent</h1>
				<div class="user-profile">
					<i style="margin-right: 15px;" class="fa-solid fa-user"></i>
					<span>{{ app.user.username }}</span>
				</div>
			</div>
			<nav>
				<ul>
					<li><a href="{{ path('app_myaccount') }}">RÉSERVATIONS</a></li>
					<li><a href="{{ path('app_account') }}">COMPTE</a></li>
					<li><a href="{{ path('account_password') }}">MOT DE PASSE</a></li>
				</ul>
			</nav>
		</header>
		<main style="width: 80%; margin: 0 auto;">
   			{% for message in app.flashes('success') %}
                <div id="flash-message" class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
			<section class="account-info">
				<h1>Mon Compte</h1>
				<form method="post" action="{{ path('account_update') }}">

					<div class="form-group">
						<label for="name">Nom</label>
						<input type="text" id="name" name="name" value="{{ user.name }}" class="form-control" required>
					</div>

					<div class="form-group">
						<label for="firstname">Prénom</label>
						<input type="text" id="firstname" name="firstname" value="{{ user.firstname }}" class="form-control" required>
					</div>

                    <div class="form-group">
						<label for="email">Email</label>
						<input type="email" id="email" name="email" value="{{ user.email }}" class="form-control" required>
					</div>

					<div class="form-group">
						<label for="phoneNumber">N° Téléphone</label>
						<input type="text" id="phoneNumber" name="phonenumber" value="{{ user.phonenumber }}" class="form-control" required>
					</div>

                    <div class="form-group">
						<label for="address">Adresse</label>
						<input type="text" id="address" name="address" value="{{ user.address }}" class="form-control" required>
					</div>
				
					<!-- Add more fields as necessary -->
					<button type="submit" class="btn">Mettre à jour</button>
				</form>
			</section>

		</main>
		{% include '_partials/footer.html.twig' %}
	</div>

	<style>
		.container {
			display: flex;
			flex-direction: column;
			min-height: 100vh;
		}

		header,
		main {
			flex: 1;
		}


		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}

		header {
			background-color: #fff;
		}

		.navbar {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 10px 20px;
			width: 90%;
			margin: 0 auto;
		}

		.logo {
			height: 50px;
		}

		.user-profile {
			display: flex;
			align-items: center;
		}

		.user-icon {
			height: 30px;
			margin-right: 10px;
		}

		nav ul {
			list-style: none;
			display: flex;
			justify-content: start;
			padding: 10px 0;
			border-bottom: 1px solid #ddd;
			background-color: #fff;
			width: 100%;
			margin: 0 auto;
			gap: 30px;
		}

		nav a {
			text-decoration: none;
			color: #000;
			font-weight: bold;
			padding: 10px 0;
		}

		nav a:hover {
			border-bottom: 3px solid #fe5b3e;
		}

		main {
			padding: 20px;
		}


		.box-icon {
			border-radius: 7px;
			height: 70px;
			width: 70px;
			margin-right: 20px;
		}


		.new-reservation-link {
			display: block;
			margin-top: 20px;
			font-size: 16px;
			text-decoration: none;
			color: #fe5b3e;
		}
      .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-success {
            color: #3c763d;
            background-color: #dff0d8;
            border-color: #d6e9c6;
        }

		.account-info {
			text-align: start;
			margin-top: 20px;
		}

		.account-info h1 {
			font-size: 30px;
			margin: 30px auto;
		}

		.form-group {
			margin-bottom: 20px;
		}

		.form-group label {
			font-weight:bold;
		}

	    .form-control {
            width: 100%;
            padding: 10px;
            border: none;
            border-bottom: 1px solid #ddd;
            border-radius: 0;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
			margin-bottom:15px;
        }

        .form-control:focus {
            outline: none;
            border-bottom: 2px solid #fe5b3e;
        }

		.btn {
			background-color: #fe5b3e;
			color: #fff;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
			margin-bottom: 20px;
		}

		.btn:hover {
			opacity:0.9;
	
		}
	</style>
	    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                setTimeout(() => {
                    flashMessage.style.transition = 'opacity 0.5s ease';
                    flashMessage.style.opacity = '0';
                    setTimeout(() => flashMessage.remove(), 500); // Remove after transition
                }, 3000); // 3 seconds
            }
        });
    </script>
{% endblock %}

