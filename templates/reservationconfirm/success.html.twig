{% extends 'base.html.twig' %}

{% block title %}Réservation Confirmée{% endblock %}

{% block body %}
    {% include '_partials/header_connected.html.twig' %}

<div class="section__container" id="confirmation-message">
    <div class="confirmation-content">
        <div class="confirmation-icon">
            <i class="ri-check-line"></i>
        </div>
        <h1>Votre réservation a été confirmée</h1>

        <div>
    
            <p>Votre numéro de réservation est : {{ location.id }}</p>
            {# <p>Un email de confirmation a été envoyé à : {{ location.user.email }}</p> #}
            <p>Statut de la réservation : {{ status.name }}</p>
        </div>
        <h4>Merci pour votre réservation !</h4>
        <div style="margin-top: 20px;">
            <a href="{{ path('app_home') }}" class="return-home-link">Cliquez ici pour revenir à l'accueil</a>
        </div>
    </div>
</div>

<style>
    #confirmation-message {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
    }

    .confirmation-content {
        max-width: 500px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;

    }

    .confirmation-icon {
        background-color: #28a745;
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2rem;
        margin: 0 auto 20px auto;
    }

    .confirmation-icon i {
        line-height: 1;
    }

    h1 {
        margin-bottom: 20px;
        font-size: 1.8rem;
    }

    h2 {
        margin-bottom: 10px;
        font-size: 1.4rem;
    }

    p {
        margin-bottom: 10px;
        font-size: 1rem;
    }

    .return-home-link {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #fe5b3e;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 1rem;
    }

    .return-home-link:hover {
        background-color: #dd4f35;
        font-weight:bold;
    }
</style>

{% include '_partials/footer.html.twig' %}

{% endblock %}
